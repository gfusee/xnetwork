{
	"index_patterns": [
		"operations-*"
	],
	"mappings": {
		"properties": {
			"nonce": {
				"type": "long"
			},
			"timestamp": {
				"format": "epoch_second",
				"type": "date"
			}
		}
	},
	"settings": {
		"index": {
			"sort.field": [
				"timestamp",
				"nonce"
			],
			"sort.order": [
				"desc",
				"desc"
			]
		},
		"number_of_replicas": 0,
		"number_of_shards": 5
	}
}
